<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="spreadsheet_sheet_view_list" model="ir.ui.view">
        <field name="model">spreadsheet.sheet</field>
        <field name="arch" type="xml">
            <tree create="false" editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="group_ids" widget="many2many_tags" />
                <button
                    type="action"
                    name="%(spreadsheet_management.ir_actions_sheet_action)d"
                    string="Open"
                    context="{'params': {'sheet_id': active_id}}"
                />
            </tree>
        </field>
    </record>


    <record id="spreadsheet_sheet_container_view_form" model="ir.ui.view">
        <field name="model">spreadsheet.sheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
